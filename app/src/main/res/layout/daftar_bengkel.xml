<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginVertical="7dp"
    android:id="@+id/item_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_bengkel_nama"
        android:fontFamily="@font/sfbold"
        android:maxLength="20"
        android:textSize="16dp"
        android:text="Bengkel Persatuan"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_bengkel_alamat"
        android:textSize="14dp"
        android:maxLength="30"
        android:text="Jl. Sukamenak No.12"
        android:layout_marginTop="5dp"
        android:layout_below="@id/item_bengkel_nama"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_bengkel_harga"
        android:layout_alignParentRight="true"
        android:maxLength="15"
        android:text="Rp. 10.000 - Rp. 15.000"
        android:fontFamily="@font/sfbold"
        android:textSize="16dp"/>

</RelativeLayout>